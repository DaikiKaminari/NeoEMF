                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>org.eclipse.gmt</groupId>
                <artifactId>org.eclipse.gmt.modisco.java.neoemf</artifactId>
                <version>${project.version}</version>
            </dependency>

